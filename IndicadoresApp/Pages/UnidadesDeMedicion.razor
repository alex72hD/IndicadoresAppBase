@page "/unidamedicion"  
@using System.Collections.Generic  
@using System.Text.Json  
@using Services  
@inject ServicioEntidad servicioEntidad  
@inject NavigationManager navegacionManager  


<PageTitle>Lista de Medidas</PageTitle>

<h1>Medidas</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="MostrarFormularioCrear">Crear Nuevo</button>  
</div>

@if (cargando)
{
    <p><em>Cargando...</em></p>
}
else if (medidas == null || medidas.Count == 0)
{
    <p>No hay Tipos de medidaes.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unidadmedicion in medidas)
                {
                    <tr>
                        <td>@ObtenerValor(unidadmedicion, "id")</td>
                        <td>@ObtenerValor(unidadmedicion, "descripcion")</td>
                        <td>
                            <button class="btn btn-warning btn-sm" @onclick="() => MostrarFormularioEditar(unidadmedicion)">Editar</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarEliminar(unidadmedicion)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (mostrarFormulario)
{
    <div class="modal" style="display:block; background-color: rgba(0,0,0,0.4);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(modoEdicion ? "Editar" : "Crear") Tipo de medida</h5>
                    <button type="button" class="btn-close" @onclick="CerrarFormulario"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" @bind="medidaActual.nombre" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarFormulario">Cancelar</button>
                    <button type="button" class="btn btn-primary" @onclick="Guardarmedida">Guardar</button>
                </div>
            </div>
        </div>
    </div>
}

@if (mostrarConfirmacion)
{
    <div class="modal" style="display:block; background-color: rgba(0,0,0,0.4);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" @onclick="CancelarEliminar"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar el medida: @medidaEliminar?.nombre?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="Eliminarmedida">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@if (errorMensaje != null)
{
    <div class="alert alert-danger">
        Error: @errorMensaje
    </div>
}

@if (exitoMensaje != null)
{
    <div class="alert alert-success">
        @exitoMensaje
    </div>
}

@code {
    private List<Dictionary<string, object>> medidas = new List<Dictionary<string, object>>();
    private bool cargando = true;
    private string? errorMensaje = null;
    private string? exitoMensaje = null;
    private const string TABLA = "unidadmedicion";

    // Variables para el formulario
    private bool mostrarFormulario = false;
    private bool modoEdicion = false;
    private medidaModel medidaActual = new medidaModel();

    // Variables para confirmación de eliminación
    private bool mostrarConfirmacion = false;
    private medidaModel medidaEliminar = new medidaModel();

    protected override async Task OnInitializedAsync()
    {
        await Cargarunidadmedicion();
    }

    private async Task Cargarunidadmedicion()
    {
        cargando = true;
        errorMensaje = null;
        
        try
        {
            var resultado = await servicioEntidad.ObtenerTodosAsync(TABLA);
            
            if (resultado != null)
            {
                medidas = resultado;
            }
            else
            {
                medidas = new List<Dictionary<string, object>>();
            }
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al cargar unidades de medida: {ex.Message}";
            medidas = new List<Dictionary<string, object>>();
        }
        finally
        {
            cargando = false;
        }
    }

    private string ObtenerValor(Dictionary<string, object> diccionario, string clave)
    {
        if (diccionario == null)
            return string.Empty;
            
        if (diccionario.TryGetValue(clave, out var valor))
        {
            return valor?.ToString() ?? string.Empty;
        }
        
        return string.Empty;
    }
    private void MostrarFormularioCrear()
    {
        medidaActual = new medidaModel();
        modoEdicion = false;
        mostrarFormulario = true;
    }

    private void MostrarFormularioEditar(Dictionary<string, object> medida)
    {
        medidaActual = new medidaModel
        {
            id = ObtenerValor(medida, "id"),
            nombre = ObtenerValor(medida, "descripcion")
        };
        modoEdicion = true;
        mostrarFormulario = true;
    }

    private void CerrarFormulario()
    {
        mostrarFormulario = false;
    }

    private async Task Guardarmedida()
    {
        errorMensaje = null;
        exitoMensaje = null;

        try
        {
            var medidaDict = new Dictionary<string, object>
            {
                ["descripcion"] = medidaActual.nombre
            };

            bool resultado;

            if (modoEdicion)
            {
                resultado = await servicioEntidad.ActualizarAsync(
                    TABLA,
                    "id",
                    medidaActual.id,
                    medidaDict
                );

                if (resultado)
                {
                    exitoMensaje = "Unidad de medida actualizada correctamente.";
                }
            }
            else
            {
                resultado = await servicioEntidad.CrearAsync(
                    TABLA,
                    medidaDict
                );

                if (resultado)
                {
                    exitoMensaje = "Unidad de medida creada correctamente.";
                }
            }

            if (resultado)
            {
                await Cargarunidadmedicion();
                mostrarFormulario = false;
            }
            else
            {
                errorMensaje = "No se pudo guardar la unidad de medida.";
            }
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al guardar la unidad de medida: {ex.Message}";
        }
    }
    private void ConfirmarEliminar(Dictionary<string, object> medida)
    {
        medidaEliminar = new medidaModel
        {
            id = ObtenerValor(medida, "id"),
            nombre = ObtenerValor(medida, "descripcion")
        };
        mostrarConfirmacion = true;
    }

    private void CancelarEliminar()
    {
        mostrarConfirmacion = false;
    }

    private async Task Eliminarmedida()
    {
        errorMensaje = null;
        exitoMensaje = null;

        try
        {
            var resultado = await servicioEntidad.EliminarAsync(
                TABLA,
                "id",
                medidaEliminar.id
            );

            if (resultado)
            {
                exitoMensaje = "medida eliminada correctamente.";
                await Cargarunidadmedicion();
            }
            else
            {
                errorMensaje = "No se pudo eliminar la medida.";
            }

            mostrarConfirmacion = false;
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al eliminar la unidad de medida: {ex.Message}";
        }
    }
    private class medidaModel
    {
        public string id { get; set; } = string.Empty;
        public string nombre { get; set; } = string.Empty;
    }
}